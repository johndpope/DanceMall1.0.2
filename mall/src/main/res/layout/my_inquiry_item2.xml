<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="26px"
                android:text="CJD002"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/dc"
                android:textSize="26px"
                android:layout_alignParentEnd="true"
                android:text="暂无报价"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_e"
            />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_marginTop="20px"
            >
            <ImageView
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:background="@drawable/post_image_default"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZARA 春季新款 休闲大衣 潮流前线 棉麻质地"
                android:layout_marginLeft="180px"
                android:layout_marginTop="7px"
                android:textColor="@color/black"
                android:textSize="26px"
                android:layout_marginRight="13px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800积分"
                android:layout_marginLeft="180px"
                android:layout_marginTop="4px"
                android:textColor="@color/dc"
                android:textSize="26px"
                android:layout_marginBottom="7px"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="13px"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_f7"
            android:layout_marginTop="20px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共 2 项服务"
            android:textSize="26px"
            android:layout_marginTop="18px"
            android:textColor="@color/gray_9"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="询价有效时间还剩"
                android:textSize="26px"

                android:textColor="@color/gray_9"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:14:22"
                android:textSize="26px"

                android:textColor="@color/dc"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <com.ruffian.library.RTextView
            android:layout_width="162px"
            android:layout_height="58px"
            app:corner_radius="58px"
            app:border_color_normal="@color/gray_9"
            android:layout_marginTop="34px"
            app:border_width_normal="1px"
            android:textColor="@color/gray_9"
            android:text="放弃询价"
            android:gravity="center"
            android:textSize="28px"
            android:layout_gravity="end"
            android:layout_marginBottom="15px"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@color/gray_f7"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
</layout>