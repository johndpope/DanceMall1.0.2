<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f7"
    android:orientation="vertical">

    <include layout="@layout/title_layout_finish" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:layout_above="@+id/submit_layout"
        android:id="@+id/scroll_view"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="235px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="10px"
                android:background="@color/white">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/separate_inquiry"
                    android:layout_width="310px"
                    android:layout_height="130px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="30px"
                    android:background="@drawable/rec_blue_bg"
                    android:orientation="vertical">

                    <View
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="13px"
                        android:id="@+id/separate_view_icon"
                        android:background="@drawable/separate_view_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10px"
                        android:text="按服务分开询价"
                        android:id="@+id/separate_text"
                        android:textColor="@color/appColor"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/together_inquiry"
                    android:layout_width="310px"
                    android:layout_height="130px"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="30px"
                    android:background="@drawable/rec_gray_bg"
                    android:orientation="vertical">

                    <View
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="13px"
                        android:id="@+id/together_view_icon"
                        android:background="@drawable/together_view_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10px"
                        android:text="所有服务一起询价"
                        android:id="@+id/together_text"
                        android:textColor="@color/gray_9"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="24px"
                    android:layout_marginLeft="20px"
                    android:text="准确进行需求描述，获得众多商家的实时报价"
                    android:textColor="@color/gray_9"
                    android:textSize="26px" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@color/white"
                android:orientation="vertical">


                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginTop="1px"
                    android:background="@color/white">

                    <View
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26px"
                        android:background="@drawable/position_icon"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="82px"
                        android:background="@color/transparent"
                        android:text="服务地址"

                        android:textColor="@color/gray_9"
                        android:textColorHint="#d2d2d2"
                        android:textSize="32px" />

                    <TextView
                        android:id="@+id/address_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="50px"
                        android:gravity="center_vertical"
                        android:hint="请选择服务地址"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="28px" />

                    <View
                        android:layout_width="44px"
                        android:layout_height="44px"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow_right_gray_icon" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/use_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginTop="1px"
                    android:background="@color/white">

                    <View
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24px"
                        android:background="@drawable/clock_icon"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="82px"
                        android:background="@color/transparent"
                        android:text="使用时间"

                        android:textColor="@color/gray_9"
                        android:textColorHint="#d2d2d2"
                        android:textSize="32px" />

                    <TextView
                        android:id="@+id/use_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="50px"
                        android:gravity="center_vertical"
                        android:hint="请选择使用时间"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="28px" />

                    <View
                        android:layout_width="44px"
                        android:layout_height="44px"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow_right_gray_icon" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/contact_layout"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white">

                    <View
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26px"
                        android:background="@drawable/user_icon"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="82px"
                        android:background="@color/transparent"
                        android:text="联系人"

                        android:textColor="@color/gray_9"
                        android:textColorHint="#d2d2d2"
                        android:textSize="32px" />

                    <TextView
                        android:id="@+id/contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="50px"
                        android:gravity="center_vertical"
                        android:hint="请选择联系人"
                        android:textColor="@color/black"
                        android:textSize="28px" />

                    <View
                        android:layout_width="44px"
                        android:layout_height="44px"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow_right_gray_icon" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:id="@+id/select_merchant_layout"
                    android:layout_below="@+id/parent_view"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/gray_f7"
                        />
                    <View
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:background="@drawable/inquiry_metchant_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22px"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_9"
                        android:textSize="32px"
                        android:layout_marginLeft="82px"
                        android:layout_centerVertical="true"
                        android:text="询价商家"

                        />
                    <View
                        android:layout_width="44px"
                        android:layout_height="44px"
                        android:background="@drawable/arrow_right_gray_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="68px"
                        android:textColor="@color/black"
                        android:text="不限"
                        android:id="@+id/select_merchant"
                        android:textSize="28px"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:text="服务要求"
                android:textColor="@color/gray_9"
                android:textSize="28px" />

            <GridLayout
                android:id="@+id/service_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@color/white"
                android:columnCount="1">

            </GridLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:id="@+id/submit_layout"
        android:layout_alignParentBottom="true">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="290px"
            android:layout_height="match_parent"

            >


            <View
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:background="@drawable/main_select_demand_result_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22px"
                android:text="已选"
                android:textColor="@color/black_3"
                android:textSize="26px" />

            <TextView
                android:id="@+id/select_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:textColor="#DC0000"
                android:textSize="26px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:text="个服务"
                android:textColor="@color/black_3"
                android:textSize="26px" />
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/appColor"
            android:gravity="center"
            android:text="提交询价"
            android:textColor="@color/white"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>