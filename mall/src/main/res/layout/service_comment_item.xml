<?xml version="1.0" encoding="utf-8"?>
<layout>


    <com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:minHeight="427px"
            android:orientation="vertical"

            >

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="68px"
                android:layout_marginTop="30px">

                <ImageView
                    android:id="@+id/head_image"
                    android:layout_width="68px"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28px"
                    android:layout_marginTop="2px"
                    android:layout_toEndOf="@+id/head_image">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="啊康康康"
                        android:textColor="#2B3649"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/user_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:text=""
                        android:textColor="@color/gray_9"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28px"
                    android:layout_marginTop="6px"
                    android:layout_toEndOf="@+id/head_image">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:text="打分"
                        android:textColor="@color/gray_9"
                        android:textSize="24px" />

                    <GridLayout
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10px"
                        android:background="@drawable/service_star_icon" />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="28px"
                android:layout_marginTop="30px">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-5"
                    android:textColor="@color/gray_a"
                    android:textSize="26px" />

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="60px"
                    android:background="@color/gray_a" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="杭州奥体中心"
                    android:textColor="@color/gray_a"
                    android:textSize="26px" />

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="60px"
                    android:background="@color/gray_a" />

                <TextView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P4屏幕"
                    android:textColor="@color/gray_a"
                    android:textSize="26px" />


            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28px"

                android:text="虽然我也不知道写点什么，但是还要点的吧"
                android:textColor="@color/black"
                android:textSize="28px" />

            <GridLayout
                android:id="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:layout_marginTop="24px">

            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_e" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</layout>