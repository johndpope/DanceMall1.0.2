<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@color/gray_f7" />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:minHeight="638px"
            android:layout_marginRight="30px"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px">

                <ImageView
                    android:id="@+id/head_image"
                    android:layout_width="80px"
                    android:layout_height="80px"

                    app:riv_corner_radius="80px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="127px"
                    android:layout_marginTop="7px"
                    android:text="啊康康康"
                    android:id="@+id/nick_name"
                    android:textColor="#2B3649"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/user_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="127px"
                    android:layout_marginTop="47px"
                    android:text="啊康康康"
                    android:textColor="@color/gray_9"
                    android:textSize="24px"

                    />


                <View
                    android:visibility="gone"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/message"
                    android:background="@drawable/service_message_ico" />
            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="82px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2px"
                        android:text="一小时前"
                        android:id="@+id/post_time"
                        android:textColor="@color/gray_9"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.ruffian.library.RTextView
                    android:layout_width="120px"
                    android:layout_height="32px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32px"
                    android:layout_toEndOf="@id/address_layout"
                    android:gravity="center"
                    android:id="@+id/topic"
                    android:text="行业动态"
                    android:textColor="@color/gray_9"
                    android:textSize="22px"
                    app:border_color_normal="@color/gray_9"
                    app:border_width_normal="1px"
                    app:corner_radius="32px" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="388px">

                    <View
                        android:layout_width="44px"
                        android:layout_height="44px"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/look_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4px"
                        android:text="123"
                        android:id="@+id/look_count"
                        android:textColor="@color/gray_9"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/praise"
                    android:layout_marginLeft="486px">

                    <View
                        android:layout_width="44px"
                        android:layout_height="44px"
                        android:id="@+id/praise_icon"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/praise_icon" />

                    <TextView
                        android:id="@+id/like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4px"
                        android:text="123"

                        android:textColor="@color/gray_9"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="589px">

                    <View
                        android:layout_width="44px"
                        android:layout_height="44px"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/message_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4px"
                        android:text="123"
                        android:id="@+id/comment_count"
                        android:textColor="@color/gray_9"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22px"

                android:text="虽然我也不知道写点什么，但是还要点的吧"
                android:textColor="@color/black"
                android:textSize="28px" />

            <GridLayout
                android:id="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="24px">

            </GridLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@color/gray_f7" />
    </com.zhy.autolayout.AutoLinearLayout>
</layout>