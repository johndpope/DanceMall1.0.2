<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"

        android:layout_height="88px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/back"
            android:layout_width="73px"
            android:layout_height="match_parent">

            <View
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_centerInParent="true"
                android:background="@drawable/back_icon" />


        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="36px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/share_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingLeft="28px"
            android:paddingRight="28px">

            <View
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_centerInParent="true"
                android:background="@drawable/share_icon" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/comment_layout"
        android:layout_below="@id/title_layout">

    </com.github.jdsjlzx.recyclerview.LRecyclerView>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:minHeight="98px">

        <EditText
            android:id="@+id/comment_content"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="15px"
            android:background="@color/gray_f7"
            android:minHeight="68px"
            android:textSize="26px"

            />

        <View
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:background="@drawable/message_icon" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8px"
            android:text=""
            android:textColor="@color/gray_9"
            android:textSize="24px" />

        <View
            android:id="@+id/collect"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"

            android:background="@drawable/service_star_gray_icon" />

        <View
            android:id="@+id/praise"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6px"
            android:background="@drawable/praise_icon" />

        <com.ruffian.library.RTextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8px"
            android:gravity="center"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:text="发送"
            android:textColor="@color/gray_9"
            android:textSize="24px"
            app:border_color_normal="@color/gray_9"
            app:border_width_normal="1px"
            app:corner_radius="4px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>