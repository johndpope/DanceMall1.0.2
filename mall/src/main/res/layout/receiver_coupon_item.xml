<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="687px"
            android:layout_height="188px"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20px"
            android:background="@drawable/receiver_coupon_bg">

            <TextView
                android:id="@+id/money_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29px"
                android:layout_marginTop="45px"
                android:text="￥"
                android:textColor="@color/appColor"
                android:textSize="28px"

                />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:maxLength="5"
                android:text="30"
                android:textColor="@color/appColor"
                android:textSize="84px"
                android:textStyle="bold"

                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money"
                android:layout_marginLeft="50px"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/use_time"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="2018.05.05-2018.05.05"
                    android:textColor="@color/gray_9"
                    android:textSize="20px" />

                <TextView

                    android:id="@+id/coupon_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4px"
                    android:ellipsize="end"
                    android:maxWidth="240px"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_9"
                    android:textSize="20px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="218px"
                android:layout_marginTop="30px"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/coupon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXX"

                    android:textColor="@color/black"
                    android:textSize="28px"
                    android:textStyle="bold" />

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28px"

                android:padding="10px"
                android:text="立即\n领取"
                android:textColor="@color/transparent"
                android:textSize="54px"

                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</layout>