<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f7"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f7"
        android:layout_above="@+id/bottom_layout"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="428px">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/shop_image"
                    android:scaleType="fitXY"
                />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="62px">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/back"
                        android:layout_width="73px"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <View
                            android:layout_width="44px"
                            android:layout_height="44px"
                            android:layout_centerInParent="true"
                            android:background="@drawable/white_back_arrow" />


                    </com.zhy.autolayout.AutoRelativeLayout>

                    <View
                        android:layout_width="46px"
                        android:layout_height="46px"
                        android:id="@+id/message"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="34px"
                        android:background="@drawable/main_message" />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="18px">

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="32px" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:id="@+id/service_name"
                    android:text=""
                    android:textColor="@color/gray_9"
                    android:textSize="26px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:text=""
                    android:id="@+id/shop_type"
                    android:textColor="@color/gray_9"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="20px">


                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:id="@+id/star"
                    android:text=""
                    android:textColor="@color/gray_9"
                    android:textSize="26px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:text=""
                    android:id="@+id/deal_number"
                    android:textColor="@color/gray_9"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="20px">


                <View
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/position_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:text=""
                    android:id="@+id/address"
                    android:textColor="@color/gray_9"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px">

                <View
                    android:layout_width="6px"
                    android:layout_height="28px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/appColor" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:text="商家服务"
                    android:textColor="@color/black"
                    android:textSize="32px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <GridLayout
                android:id="@+id/merchant_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:columnCount="1" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="30px"
                android:id="@+id/more_case_layout"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px">

                <View
                    android:layout_width="6px"
                    android:layout_height="28px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/appColor" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1"
                    android:text="案例"

                    android:textColor="@color/black"
                    android:textSize="32px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:textColor="@color/gray_9"
                    android:text="查看更多"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <GridLayout
                android:id="@+id/case_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:columnCount="1" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="30px"
                android:id="@+id/more_comment_layout"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px">

                <View
                    android:layout_width="6px"
                    android:layout_height="28px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/appColor" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:text="用户点评 (0)"
                    android:id="@+id/comment_count"
                    android:textColor="#101010"
                    android:textSize="32px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:textColor="@color/gray_9"
                    android:text="查看更多"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <GridLayout
                android:id="@+id/comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:columnCount="1" />
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="98px"
    android:layout_alignParentBottom="true"
    android:id="@+id/bottom_layout"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="98px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/chat_layout"

        >
        <View
            android:layout_width="44px"
            android:layout_height="44px"
            android:background="@drawable/message_icon"
            android:layout_marginTop="13px"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray_9"
            android:text="聊天"
            android:textSize="24px"
            android:layout_marginTop="4px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="1px"
        android:layout_height="58px"
        android:layout_gravity="center_vertical"
        android:background="@color/gray_e"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="98px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/phone_layout"
        >
        <View
            android:layout_width="44px"
            android:layout_height="44px"
            android:background="@drawable/phone_icon"
            android:layout_marginTop="13px"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray_9"
            android:text="电话"
            android:textSize="24px"
            android:layout_marginTop="4px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="1px"
        android:layout_height="58px"
        android:layout_gravity="center_vertical"
        android:background="@color/gray_e"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="98px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/collect_layout"
        >
        <View
            android:layout_width="44px"
            android:layout_height="44px"
            android:background="@drawable/collection_icon"
            android:layout_marginTop="13px"
            android:id="@+id/collect_icon"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray_9"
            android:text="收藏"
            android:textSize="24px"
            android:layout_marginTop="4px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_rec_btn"
        android:textColor="@color/white"
        android:textSize="32px"
        android:gravity="center"
        android:id="@+id/inquiry_layout"
        android:text="发起询价"

        />
</com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>