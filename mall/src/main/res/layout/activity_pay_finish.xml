<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="466px"
        android:background="@drawable/pay_finish_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="152px"
        android:text="商户将在30分钟内确定订单"
        android:textColor="@color/gray_4d"
        android:textSize="34px" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="93px"
        android:layout_marginRight="93px"
        android:layout_marginTop="60px">

        <com.ruffian.library.RTextView
            android:id="@+id/back_main"
            android:layout_width="261px"
            android:layout_height="88px"
            android:gravity="center"
            android:text="返回主页"
            android:textColor="@color/gray_4d"
            android:textSize="34px"
            app:border_color_normal="@color/gray_4d"
            app:border_width_normal="1px"
            app:corner_radius="20px" />

        <com.ruffian.library.RTextView
            android:id="@+id/look_order"
            android:layout_width="261px"
            android:layout_height="88px"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="查看订单"
            android:textColor="@color/gray_4d"
            android:textSize="34px"
            app:border_color_normal="@color/gray_4d"
            app:border_width_normal="1px"
            app:corner_radius="20px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>