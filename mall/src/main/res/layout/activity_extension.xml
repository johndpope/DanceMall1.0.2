<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f7"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="580px"
        android:layout_height="416px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:background="@drawable/extension_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44px"
            android:text="商家置顶"
            android:textColor="@color/black"
            android:textSize="34px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24px"
            android:text="商家列表优先置顶，提升用户曝光率"
            android:textColor="@color/gray_9"
            android:textSize="24px"

            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36px">

            <TextView
                android:id="@+id/top_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/dc"
                android:textSize="28px" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="元/月"
                android:textColor="#3F495C"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28px"
            android:text="有效期"
            android:id="@+id/top_valid_time"
            android:textColor="#3F495C"
            android:textSize="28px" />
        <TextView
            android:layout_width="160px"
            android:layout_height="58px"
            android:layout_marginTop="56px"
            android:background="@drawable/common_btn"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="28px"
            android:id="@+id/top_purchase"
            android:text="立即购买"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="580px"
        android:layout_height="416px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:background="@drawable/extension_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44px"
            android:text="报价置顶"
            android:textColor="@color/black"
            android:textSize="34px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24px"
            android:text="报价列表优先置顶，提升报价成功率"
            android:textColor="@color/gray_9"
            android:textSize="24px"

            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36px">

            <TextView
                android:id="@+id/inquiry_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/dc"
                android:textSize="28px" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="元/月"
                android:textColor="#3F495C"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28px"
            android:text="有效期"
            android:id="@+id/inquiry_valid_time"
            android:textColor="#3F495C"
            android:textSize="28px" />
        <TextView
            android:layout_width="160px"
            android:layout_height="58px"
            android:layout_marginTop="56px"
            android:background="@drawable/common_btn"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="28px"
            android:id="@+id/inquiry_purchase"
            android:text="立即购买"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>